{
  "name": "growhub",
  "version": "1.0.0",
  "description": "GrowHub - Arduino Monitoring Dashboard mit React Frontend und Node.js Backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build:dev": "webpack --config webpack.config.js --env dev",
    "build:backend": "webpack --config webpack.config.js --env backend",
    "build:frontend": "webpack --config webpack.config.js --env frontend",
    "start": "cd dist && node combined-server.js",
    "start:backend": "cd dist && node server.js",
    "start:frontend": "cd dist && node frontend-server.js",
    "start:combined": "cd dist && node combined-server.js",
    "start:separate": "concurrently \"node dist/server.js\" \"webpack serve --config webpack.config.js --env frontend --mode development --port 3001\"",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec \"npm run build:backend && copy .env dist-dev\\.env && node dist-dev/server.js\" --watch . --ext jsx,js",
    "dev:frontend": "webpack serve --config webpack.config.js --env frontend --mode development --port 3001",
    "dev:watch": "webpack --watch --config webpack.config.js",
    "clean": "rimraf dist dist-dev frontend/dist",
    "postbuild": "copy .env dist\\.env",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "arduino",
    "sensors",
    "react",
    "dashboard",
    "monitoring",
    "chart.js",
    "bootstrap"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.3",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "nodemon": "^3.0.2",
    "rimraf": "^6.0.1",
    "sass": "^1.90.0",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3000"
}
